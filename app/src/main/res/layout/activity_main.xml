<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="contactVM"
            type="com.adrianhelo.contactsmanager.ui.viewmodel.ContactVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_inputs"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:text="@={contactVM.inputName}"
                android:id="@+id/name_input_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:hint="New Contact´s Name"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <EditText
                android:text="@={contactVM.inputEmail}"
                android:id="@+id/email_input_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="New Contact´s Email"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_marginTop="14dp"
                app:layout_constraintStart_toStartOf="@+id/name_input_text"
                app:layout_constraintTop_toBottomOf="@+id/name_input_text"/>

            <Button
                android:onClick="@{ ()-> contactVM.saveOrUpdate()}"
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@={contactVM.saveOrUpdateButtonText}"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="@+id/name_input_text"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                android:onClick="@{()->contactVM.clearAllOrDelete()}"
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@={contactVM.clearOrDeleteAllButtonText}"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toTopOf="@+id/email_input_text"
                app:layout_constraintStart_toStartOf="@+id/save_button"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/container_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/container_inputs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
